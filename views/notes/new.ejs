<!DOCTYPE html>
<html lang="de">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/CSS/style.css">
  <title>Neue Notiz erstellen</title>
</head>

<body>

  <div class="main-layout">

    <%- include("../partials/header") %>

    <main>
      <div class="container">


          <% if(error && error.length) {%>
            <div class="alert alert-error" role="alert">
            <%= error %>
          </div>
          <% } %>

        <div class="wrapper medium-dark-wrapper">
          <h1 class="subtitle">Notiz erstellen</h1>

          <form action="/notizen/neue-Notiz" method="POST" autocomplete="off">
              
            <label for="title">
              <input type="title" id="title" name="title" placeholder="Titel" class="input subtitle-specific-notcentered" required>
            </label>       
            
            <label for="body">
              <textarea name="body" id="body" cols="50" rows="10" placeholder="Text hier eingeben..." class="input textarea" required></textarea>
            </label>
        

            <button class="rectangle-btn mb-1">Speichern</button>
            <a href="/notizen" class="rectangle-secondary-btn width-100">Abbrechen</a>
          </form>
        </div>


      </div>
    </main>

    <%- include("../partials/footer") %>
  </div>
  
</body>

</html>