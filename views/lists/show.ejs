  <link rel="stylesheet" href="../CSS/style.css">
  <title><%= foundList.name %></title>
</head>

<body>

  <div class="main-layout">

    <%- include("../partials/header") %>

    <main>
      <div class="container">
        <div class="listen-container">
          
         
          <h1 class="sub-title"><%= foundList.name %></h1>

          <ul class="items-ul">
            <% foundList.items.forEach((item) => { %>
