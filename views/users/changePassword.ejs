<!DOCTYPE html>
<html lang="de">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/CSS/style.css">
  <title>Benutzerkonto bearbeiten</title>
</head>

<body>

  <div class="main-layout">

    <%- include("../partials/header") %>

    <main>
      <div class="container">

        <!-- flash message -->
        <% if(error && error.length) {%>
        <div class="alert alert-error" role="alert">
          <%= error %>
        </div>
        <% } else if(success && success.length){ %>
        <div class="alert alert-success" role="alert">
          <%= success %>
        </div>
        <% } %>

        <div class="card-wrapper medium-dark-wrapper">
          <h1 class="subtitle">Password Ã¤ndern</h1>


          <form action="/benutzerkonto/<%=foundUser._id%>/passwort" method="POST">

            <fieldset class="input-container">
              <input type="password" id="old-password" name="oldPassword" required class="login-input" placeholder="">
